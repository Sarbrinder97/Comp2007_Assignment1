@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Comp2007_Assignment1.Models.TEAM
<h2>Albums for Genre: @ViewBag.TEAM</h2>
<table class="table table-striped table-hover">
    <tr>
        <th>Jersey Number</th>
        <th>Player Name</th>
        <th>Points per Game</th>
        <th>Rebounds Per Game</th>
        <th>Assists per Game</th>
    </tr>
    @foreach (var a in Model.PLAYERS)
    {
        <tr>
            <td>@a.JERSEY_NUMBER</td>
            <td>@a.PLAYER_NAME</td>
            <td>@a.POINTS_PER_GAME</td>
            <td>@a.REBOUNDS_PER_GAME</td>
            <td>@a.ASSISTS_PER_GAME</td>
            
        </tr>
    }
</table>

